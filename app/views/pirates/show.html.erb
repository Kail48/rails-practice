<%= render :partial => "shared/navbar" %>
<div class="w-full h-screen flex flex-col justify-center items-center gap-y-3">
  <% if @pirate.image.attached? %>
    <img src="<%= (url_for(@pirate.image))%>" alt="" class= "h-32 w-auto">
  <% else%>
    <%= image_tag "piratedefault.png", :class => "h-32 w-auto"  %>
  <% end %>
  <h3 class="text-xl"><%= @pirate.name %></h3>
  <h3 class="text-xl"><%= @pirate.position %></h3>
  <% if current_user.position_before_type_cast>2 %>
    <%= link_to "/pirates/bounty/new/#{@pirate.id}"  do %>
      <button class='flex w-32 justify-center rounded-md bg-black px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600'>Change bounty</button>
    <% end %>
  <% end %>
</div>
