<%= render :partial => "shared/navbar" %>
<%= link_to 'users/new' do %>
  <button class='flex mt-6 ml-2 justify-center rounded-md bg-black px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600'>Add New Marine</button>
<% end %>
<% @marines.each do |marine| %>
  <% if marine.position_before_type_cast<6 %>
    <%= link_to user_path(marine) do %>
      <div class="flex flex-col justify-center items-center my-4">
        <img src="<%= (url_for(marine.image))%>" alt="" class="h-24 w-auto">
        <h3> <%= marine.name %></h3>
        <h3> <%= marine.position %></h3>
      </div>
    <% end %>
  <% end %>
<% end %>
